{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "__test__",
    "__mock__",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}